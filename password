import random

lower="abcdefghijklmnopqrstuvwxyz"

upper= "ABCDEFGHIJKLMNOPQRSTUVWXYZ"

numbers = "1234567890"

symbols="!@#$^&()_+/"
print("Welcome to Password Generator")
length=int(input("Enter No.of digits to generate Password: "))

n_lower=int(input("How many lower letters do you want?\n: "))
n_upper=int(input("How many upper letters do you want?\n : "))
n_numbers=int(input("How many numbers do you want?\n: "))
n_symbols=int(input("How many no.of symbols do you want?\n: "))

all = lower + upper + numbers + symbols

password ="" .join(random.sample(all,length))
print("Password: ",password)
